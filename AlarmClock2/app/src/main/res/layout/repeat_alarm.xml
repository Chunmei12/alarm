<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    >

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
    <TextView
        android:id="@+id/Monday"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/colorBg"
        android:text="Every Monday"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        />

    <Switch
        android:id="@+id/mySwitch_Monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorBg"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"

        />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:id="@+id/Tuesday"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorBg"
            android:text="Every Tuesday"
            android:textSize="30dp"
            android:layout_marginTop="40dp"

            />

        <Switch
            android:id="@+id/mySwitch_Tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorBg"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:id="@+id/Wendesday"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorBg"
            android:text="Every Wednesday"
            android:textSize="30dp"
            android:layout_marginTop="40dp"

            />

        <Switch
            android:id="@+id/mySwitch_Wendesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorBg"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:id="@+id/Thursday"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorBg"
            android:text="Every Thursday"
            android:textSize="30dp"
            android:layout_marginTop="40dp"

            />

        <Switch
            android:id="@+id/mySwitch_Thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorBg"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:id="@+id/Friday"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorBg"
            android:text="Every Friday"
            android:textSize="30dp"
            android:layout_marginTop="40dp"

            />

        <Switch
            android:id="@+id/mySwitch_Friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorBg"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            />
    </RelativeLayout>
    
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:id="@+id/Saturday"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorBg"
            android:text="Every Saturday"
            android:textSize="30dp"
            android:layout_marginTop="40dp"

            />

        <Switch
            android:id="@+id/mySwitch_Sarturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorBg"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:id="@+id/Sunday"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorBg"
            android:text="Every Sunday"
            android:textSize="30dp"
            android:layout_marginTop="40dp"

            />

        <Switch
            android:id="@+id/mySwitch_Sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorBg"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            />
    </RelativeLayout>


</LinearLayout>
